<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="sdop.image.list.controller.model.ImageModel" />

        <variable
            name="image"
            type="sdop.image.list.controller.model.ImageModel" />
    </data>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/searched_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:imageWidth="@{image.imageWidth}"
        app:imageHeight="@{image.imageHeight}"
        app:imageUrl="@{image.imageUrl}" />
</layout>